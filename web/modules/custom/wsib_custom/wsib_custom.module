  ];

  $form['field_lost_time_no_lost_time']['widget'][0]['subform']['field_wsib_other_telephone']['widget'][0]['value']['#states'] = [
    'required' => [
      ':input[name="field_lost_time_no_lost_time[0][subform][field_modified_work_confirmed_by]"]' => ['value' => 'other'],
