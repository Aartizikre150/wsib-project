  ];

  $form['field_return_to_work']['widget'][0]['subform']['field_wsib_other_name']['widget'][0]['value']['#states'] = [
    'required' => [
      ':input[name="field_return_to_work[0][subform][field_responsible_for_arranging]"]' => ['value' => 'other'],
    ],
